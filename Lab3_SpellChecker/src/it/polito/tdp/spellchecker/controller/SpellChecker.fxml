<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polito.tdp.spellchecker.controller.SpellCheckerController">
   <center>
      <VBox prefHeight="500.0" prefWidth="500.0" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="TOP_CENTER">
               <children>
                  <Label text="Lab03_SpellChecker" />
               </children>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="TOP_CENTER" spacing="50.0">
               <children>
                  <Label text="Choose the language" />
                  <ComboBox fx:id="btnComboBox" prefWidth="150.0" />
               </children>
            </HBox>
            <HBox prefHeight="350.0" prefWidth="350.0">
               <children>
                  <TextField fx:id="txtInput" prefHeight="240.0" prefWidth="500.0" />
               </children>
               <VBox.margin>
                  <Insets left="10.0" right="10.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="TOP_RIGHT">
               <children>
                  <Button fx:id="btnCheck" mnemonicParsing="false" onAction="#doSpellCheck" text="Spell Check" />
               </children>
               <VBox.margin>
                  <Insets right="10.0" />
               </VBox.margin>
            </HBox>
            <HBox prefHeight="350.0" prefWidth="350.0">
               <children>
                  <TextArea fx:id="txtResult" prefHeight="143.0" prefWidth="584.0" />
               </children>
               <padding>
                  <Insets left="10.0" right="10.0" />
               </padding>
            </HBox>
            <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label fx:id="lblStatus" />
               </children>
            </HBox>
            <HBox alignment="TOP_RIGHT" spacing="50.0">
               <children>
                  <Label fx:id="lblErrori" />
                  <Button fx:id="btnClear" mnemonicParsing="false" onAction="#doClearText" text="Clear Text" />
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
               <padding>
                  <Insets right="10.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </center>
</BorderPane>
